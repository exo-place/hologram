{
  "name": "hologram-syntax",
  "displayName": "Hologram",
  "description": "Syntax highlighting for Hologram entity facts and Nunjucks templates",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "hologram",
        "aliases": [
          "Hologram Facts",
          "hologram"
        ],
        "extensions": [
          ".holo"
        ]
      },
      {
        "id": "hologram-template",
        "aliases": [
          "Hologram Template",
          "hologram-template"
        ],
        "extensions": [
          ".njk"
        ]
      }
    ],
    "grammars": [
      {
        "language": "hologram",
        "scopeName": "source.hologram",
        "path": "./syntaxes/hologram.tmLanguage.json"
      },
      {
        "language": "hologram-template",
        "scopeName": "source.hologram-template",
        "path": "./syntaxes/hologram-template.tmLanguage.json"
      }
    ]
  }
}
